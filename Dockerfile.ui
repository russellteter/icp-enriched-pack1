FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p runs/latest checkpoints

# Expose ports for both backend and UI
EXPOSE 8080 8501

# Health check for the API server
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Create startup script that runs both services
RUN echo '#!/bin/bash\n\
# Start API server in background\n\
uvicorn src.server.app:app --host 0.0.0.0 --port 8080 &\n\
\n\
# Wait for API to be ready\n\
echo "Waiting for API server to start..."\n\
sleep 5\n\
\n\
# Start Modern UI\n\
echo "Starting Modern UI..."\n\
cd /app && python launch_dashboard.py\n\
' > /app/start.sh && chmod +x /app/start.sh

# Run both services
CMD ["/app/start.sh"]